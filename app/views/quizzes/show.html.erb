<h1>Queres fazer um quiz <%= @quiz.style.downcase %>?</h1>
<p>Ora essa! Vamos lá a isso então!</p>

<% @questions.each_with_index do |question, index| %>
  <div class="new-question">
    <%= simple_form_for [@quiz, question] do |f| %>
      <%= f.input :content, label: "Pergunta #{index + 1}" %>
      <%= f.input :correct_answer, label: "Resposta pretendida" %>
      <% if @quiz.style == 'Cascata' %>
        <%= f.input :difficulty, label: "Dificuldade [1-3]", collection: [1,2,3], default: 1 %>
      <% end %>
      <%= f.submit 'Criar Quiz', class: 'btn btn-danger d-none' %>
    <% end %>
  </div>
<% end %>
